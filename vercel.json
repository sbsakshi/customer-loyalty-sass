{
  "crons": [
    {
      "path": "/api/cron/expiry",
      "schedule": "0 0 * * 0"
    },
    {
      "path": "/api/cron/daily-report",
      "schedule": "30 17 * * *"
    }
  ],
  "functions": {
    "app/api/cron/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/customers/route.ts": {
      "maxDuration": 10
    },
    "app/api/transactions/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/auth/**/*.ts": {
      "maxDuration": 5
    }
  }
}
